SERVER_PORT=8787
CAPTCHA_SECRET=change_me
CAPTCHA_DISABLED=false
RATE_LIMIT_MAX=20
MIN_SECONDS_BETWEEN_LEADS=30
BLACKLIST_IPS=
BLACKLIST_PHONES=
BLACKLIST_WORDS=

# Telegram (куда будут приходить заявки)
# 1) TELEGRAM_BOT_TOKEN берется в @BotFather (/token)
# 2) TELEGRAM_CHAT_ID можно получить через getUpdates после сообщения боту
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Email (SMTP) - куда будут приходить заявки
# Заполните SMTP_* реальными значениями вашего провайдера.
# Для Gmail используйте "пароль приложения" (App Password), обычный пароль не подойдет.
#
# Пример для Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your@gmail.com
# SMTP_PASS=your_app_password_without_spaces
# SMTP_FROM=your@gmail.com
# SMTP_TO=manager@your-domain.com
#
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=site@your-domain.com
SMTP_TO=manager@your-domain.com
